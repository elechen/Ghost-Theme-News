{{!< default}}
{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}

<header class="site-header">
    {{> site-header}}
</header>

{{!-- The main content area --}}
<main id="site-main" class="site-main outer home-content">
    <div class="inner posts">
        
        <div id="infinite_scroll">
            {{#foreach posts}}

                {{!-- The tag below includes the markup for each post - partials/post-cell.hbs --}}
                {{> "post-cell"}}

            {{/foreach}}
        </div>

    </div>
</main>